{
  "$schema": "https://opencode.ai/config.json",
  "instructions": [
    "CLAUDE.md"
  ],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "firecrawl-mcp": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "-y",
        "firecrawl-mcp"
      ],
      "enabled": true,
      "environment": {
        "FIRECRAWL_API_KEY": "fc-free",
        "FIRECRAWL_API_URL": "http://192.168.1.121:3000",
        "FIRECRAWL_RETRY_MAX_ATTEMPTS": "10",
        "FIRECRAWL_RETRY_INITIAL_DELAY": "500"
      }
    },
    "gemini": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "-y",
        "gemini-mcp-tool"
      ],
      "enabled": false
    },
    "taskmaster-ai": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "-y",
        "--package=task-master-ai",
        "task-master-ai"
      ],
      "enabled": true,
      "environment": {
        "MODEL": "claude-sonnet-4-20250514",
        "MAX_TOKENS": "64000",
        "TEMPERATURE": "0.2",
        "DEFAULT_SUBTASKS": "5",
        "DEFAULT_PRIORITY": "medium"
      }
    },
    "mobile": {
      "type": "local",
      "command": [
        "bun",
        "x",
        "@mobilenext/mobile-mcp@latest"
      ],
      "enabled": true
    }
  }
}
